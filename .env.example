# 💀 ENHANCED TELEGRAM BOT v3.0 - ГРУБЫЙ РЕЖИМ (ИСПРАВЛЕННЫЙ)
# ==================================================================

# ========== ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ ==========

# 🤖 Токен бота от @BotFather
# Как получить: https://t.me/BotFather → /newbot → следуйте инструкциям
BOT_TOKEN=

# 👑 ID администраторов (ваш Telegram ID)
# Как узнать: напишите боту @userinfobot и он покажет ваш ID
ADMIN_IDS=1093943977

# 🔒 КЛЮЧЕВАЯ НАСТРОЙКА: ID разрешенных чатов
# ⚠️ БЕЗ ЭТОГО НАСТРОЙКА БОТ НЕ БУДЕТ ОТВЕЧАТЬ!
# 
# Типы ID:
# • Личные сообщения: положительное число (например: 123456789)
# • Группы/каналы: отрицательное число начинающееся с -100 (например: -1001234567890)
#
# Как узнать ID чата:
# 1. Добавьте бота в группу/канал
# 2. Напишите любое сообщение
# 3. Посмотрите логи бота - там будет ID чата
# 4. Или используйте @getidsbot
#
# Примеры:
# Только ЛС: ALLOWED_CHAT_IDS=123456789
# Только группа: ALLOWED_CHAT_IDS=-1001234567890  
# ЛС + группа: ALLOWED_CHAT_IDS=123456789,-1001234567890
# Несколько групп: ALLOWED_CHAT_IDS=-1001234567890,-1001987654321
ALLOWED_CHAT_IDS=-1011268110120,-1011564216954

# ========== AI НАСТРОЙКИ (ОПЦИОНАЛЬНО) ==========

# 🧠 OpenAI API Key (для умных ответов)
# Получить: https://platform.openai.com/api-keys
# Если не заполните - бот будет отвечать заготовленными фразами

OPENAI_API_KEY=
# 🤖 Anthropic API Key (альтернатива OpenAI)
# Получить: https://console.anthropic.com/
ANTHROPIC_API_KEY=


# Модель AI (gpt-4o-mini - самая дешевая и быстрая)
AI_DEFAULT_MODEL=gpt-4o-mini

# Настройки стиля ответов AI
AI_TEMPERATURE=0.7          # 0.1-1.0 (выше = креативнее, ниже = предсказуемее)
AI_MAX_TOKENS=512           # Длина ответов (меньше = дешевле)

# ========== НАСТРОЙКИ ГРУБОГО РЕЖИМА ==========

# Шанс самостоятельной активности бота (0.001 = 0.1% = очень редко)
RANDOM_REPLY_CHANCE=0.1

DATABASE_URL=sqlite:///data/bot.db
CRYPTO_ENABLED=false
DEBUG=false

# Отладочный режим (включить при проблемах)
DEBUG=false

# ========== КРИПТОВАЛЮТЫ (ОПЦИОНАЛЬНО) ==========

CRYPTO_ENABLED=true
# CoinGecko API Key (необязательно, но увеличивает лимиты)
COINGECKO_API_KEY=

# ========== МОДЕРАЦИЯ ==========

AUTO_MODERATION=true
TOXICITY_THRESHOLD=0.8     # 0.1-1.0 (выше = строже к токсичности)
FLOOD_THRESHOLD=20          # Количество сообщений подряд для флуда
MAX_WARNINGS=3             # Количество предупреждений до бана

# ========== ЛОГИРОВАНИЕ ==========

LOG_LEVEL=INFO
LOG_CHAT_ACCESS=true       # Логировать попытки доступа к чатам
